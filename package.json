{
  "name": "arweave-archive-action",
  "version": "1.1.1",
  "private": true,
  "description": "Archive single page html and screenshot of webpage",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "release": "release-it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pawanpaudel93/arweave-archive-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "arbundles": "^0.9.5",
    "arweave": "^1.13.7",
    "axios": "^1.4.0",
    "cross-fetch": "^3.1.5",
    "find-chrome-bin": "^1.0.5",
    "mime-types": "^2.1.35",
    "promisify-child-process": "^4.1.1",
    "tempy": "^1.0.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.3",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/glob": "^8.0.0",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^18.7.18",
    "@types/which": "^2.0.1",
    "@typescript-eslint/parser": "^5.8.1",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.23.1",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.0.3",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.1",
    "release-it": "^15.10.3",
    "single-file-cli": "https://github.com/pawanpaudel93/single-file-cli.git",
    "ts-jest": "^29.0.1",
    "typescript": "^4.4.4"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {}
          ]
        }
      }
    }
  }
}
